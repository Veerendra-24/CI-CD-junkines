pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Veerendra-24/CI-CD-junkines.git'
            }
        }

        stage('Build') {
            steps {
                // Build the project and skip tests for faster build
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                // Run unit tests
                sh 'mvn test'
            }
            post {
                always {
                    // Collect test results for Jenkins
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                // Save the JAR file built by Maven
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
