pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Veerendra-24/CI-CD-junkines.git'
            }
        }

        stage('Build') {
            steps {
                // Run Maven inside the 'myapp' folder
                dir('myapp') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                dir('myapp') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    // Collect test results
                    junit 'myapp/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                // Archive the JAR built by Maven
                archiveArtifacts artifacts: 'myapp/target/*.jar', fingerprint: true
            }
        }
    }
}
